<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="PoliceSMS.Lib" namespace="PoliceSMS.Lib.Person">
  <class name="PoliceSMS.Lib.Person.Person,PoliceSMS.Lib" table="SMS_Person">
    <id name="Id" column="Id" type="int"  >
      <generator class="identity" />
    </id>

    <property name="Name" column="Name" type="string"/>
    <property name="Number" column="Number" type="string"/>
    <property name="GUID" column="GUID" type="Guid" />
    <property name="Description" column="Description"  type="string" />

    <property name="IdCard" column="IdCard"  type="string" />
    <property name="Mobile" column="Mobile"  type="string" />
    <property name="HomePhone" column="HomePhone"  type="string" />
    <property name="CompanyPhone" column="CompanyPhone"  type="string" />
    <property name="QQ" column="QQ"  type="string" />
    <property name="MSN" column="MSN"  type="string" />
    <property name="Address" column="Address"  type="string" />
    <property name="DemissionTime" column="DemissionTime"  type="DateTime" />
    <property name="LawProcess" column="LawProcess"  type="string" />
    <property name="IsCorporate" column="IsCorporate"  type="bool" />

    <many-to-one name="Sex" column="SexId"
                 class="PoliceSMS.Lib.Base.Sex" cascade="none" not-found="ignore"/>
    
    <many-to-one name="Company" column="CompanyId"
                 class="PoliceSMS.Lib.Company.Company" cascade="none" not-found="ignore"/>
  </class>

</hibernate-mapping>